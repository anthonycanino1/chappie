<?xml version="1.0" encoding="UTF-8"?>
<project name="chappie" default="compile">
	<target name="init">
    <property name="package.dir" value="chappie"/>
    <property name="src.dir" value="src" />
    <property name="build.dir" value="build" />
    <property name="build.classes.dir" value="${build.dir}/classes" />
	  <property name="chappie.libs" value="" />
    <property name="runtime.jar" location="chappie.jar"/>
  </target>

	<target name="clean" depends="init" description="Remove build files created this scripts">
		<delete dir="${build.dir}" />
		<delete file="chappie.jar" />
  </target>

	<path id="project.class.path">
		<pathelement path="vendor/jrapl-port/classes"/>
		<pathelement path="vendor/jna-4.5.0.jar"/>
		<pathelement path="vendor/jna-platform-4.5.0.jar"/>
		<pathelement path="vendor/javassist.jar"/>
	</path>

	<target name="compile" depends="init" description="Compile source">
		<exec executable="/usr/bin/make"><arg value="-C"/><arg value="src/chappie/util"/></exec>
		<mkdir dir="${build.classes.dir}" />
    <javac
      source="1.8" target="1.8"
      srcdir="${src.dir}"
      destdir="${build.classes.dir}"
      debug="on"
			classpathref="project.class.path">
    </javac>
	</target>

  <target name="jar" depends="compile">
		<jar jarfile="${runtime.jar}" manifest="manifest.txt">
			<fileset dir="src/" includes="chappie/**/*.so" />
			<fileset dir="build/classes" includes="chappie/**/*.class" />
			<fileset dir="build/classes" includes="*.class" />
			<fileset dir="vendor/jrapl-port/classes" includes="jrapl/**/*.class" />
			<fileset dir="vendor/jrapl-port/classes" includes="jrapl/**/*.so" />
			<zipgroupfileset dir="vendor" includes="*.jar"/>
		</jar>
  </target>
</project>
